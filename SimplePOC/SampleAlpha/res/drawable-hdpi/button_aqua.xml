<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#4ed5dc" />

            <stroke android:width="1dp" android:color="#28c8d0" />

            <corners android:radius="10dp" />

        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#4ed5dc" android:startColor="#7de0e6" />

            <stroke android:width="1dp" android:color="#28c8d0" />

            <corners android:radius="10dp" />

        </shape></item>

</selector>