<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#ff9d3c" />

            <stroke android:width="1dp" android:color="#ff8306" />

            <corners android:radius="10dp" />

        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#ff9d3c" android:startColor="#ffad5b"/>

            <stroke android:width="1dp" android:color="#ff8306" />

            <corners android:radius="10dp" />

        </shape></item>

</selector>