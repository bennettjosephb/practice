<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#85f482" />

            <stroke android:width="1dp" android:color="#5bf45b" />

            <corners android:radius="10dp" />

        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#85f482" android:startColor="#78f478" />

            <stroke android:width="1dp" android:color="#5bf45b" />

            <corners android:radius="10dp" />

        </shape></item>

</selector>