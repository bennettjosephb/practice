<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_learn_upper_case"
        style="@style/ButtonText"
        android:layout_height="80dp"
        android:background="@drawable/button_learn_upper_case"
        android:onClick="learnUpperCase" >
    </Button>

    <Button
        android:id="@+id/button_learn_lower_case"
        style="@style/ButtonText"
        android:layout_height="80dp"
        android:layout_below="@+id/button_learn_upper_case"
        android:background="@drawable/button_learn_lower_case"
        android:onClick="learnLowerCase" >
    </Button>

    <Button
        android:id="@+id/button_match_case_game"
        style="@style/ButtonText"
        android:layout_height="80dp"
        android:layout_below="@+id/button_learn_lower_case"
        android:background="@drawable/button_match_case_game"
        android:onClick="matchCaseGame" >
    </Button>

    <Button
        android:id="@+id/button_guess_alphabet"
        style="@style/ButtonText"
        android:layout_height="80dp"
        android:layout_below="@+id/button_match_case_game"
        android:background="@drawable/button_guess_alphabet"
        android:onClick="guessAlphabet" >
    </Button>

    <Button
        android:id="@+id/settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="3dp"
        android:background="@drawable/button_settings"
        android:layout_alignParentBottom="true"
        android:onClick="settings" >
    </Button>

</RelativeLayout>